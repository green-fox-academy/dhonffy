@using BasicWebshop.Models
@model List<ShopItem>

    <h1>
        <style>
            table, th, td {
                border: 1px solid black;
            }
        </style>
        <table>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>QuantityOfStock</th>
            </tr>
        </table>
    </h1>
    <p>
        <table>
            @for (int i = 0; i < @Model.Count; ++i)
            {
            <tr>
                <th>@Model[i].Name</th>
                <th>@Model[i].Description</th>
                <th>@Model[i].Price</th>
                <th>@Model[i].QuantityOfStock</th>
            </tr>
            }
        </table>
    </p>